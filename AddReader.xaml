<Window
    x:Class="Library.AddReaders"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Добавить читателя"
    Width="500"
    Height="450"
    Icon="libr.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>

            <TextBlock Margin="10" Text="Имя" />
            <TextBox
                x:Name="fnameTb"
                Height="20"
                Margin="10" />

            <TextBlock Margin="10" Text="Фамилия" />
            <TextBox
                x:Name="lnameTb"
                Height="20"
                Margin="10" />

            <TextBlock Margin="10" Text="Номер телефона" />
            <TextBox
                x:Name="phoneTb"
                Height="20"
                Margin="10" />

            <TextBlock Margin="10" Text="Адрес" />
            <TextBox
                x:Name="addressTb"
                Height="20"
                Margin="10" />

            <!-- <TextBlock Text="Дата истечения" Margin="10"/>
            <DatePicker x:Name="expirationDatePick" Margin="10"/>-->

            <Button
                x:Name="addReaderBtn"
                Width="100"
                Margin="10"
                Background="#F0B49D"
                Click="addReaderBtn_Click"
                Content="Добавить"
                FontSize="15" />
        </StackPanel>
    </Grid>
</Window>
