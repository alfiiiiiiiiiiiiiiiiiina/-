<Window
    x:Class="Library.AddBorrowing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Выдать книгу"
    Width="300"
    Height="300"
    Icon="libr.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <TextBlock Style="{StaticResource TBStyle}" Text="Читатель" />
        <ComboBox x:Name="ReaderCB" Margin="10" />

        <TextBlock Style="{StaticResource TBStyle}" Text="Книга" />
        <ComboBox x:Name="BookCB" Margin="10" />

        <Button
            x:Name="borrowBtn"
            Click="borrowBtn_Click"
            Content="Выдать"
            Style="{StaticResource AddDelBtn}" />


    </StackPanel>

</Window>
