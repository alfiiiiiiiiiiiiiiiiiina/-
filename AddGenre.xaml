<Window x:Class="Library.AddGenre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="AddGenre" Height="300" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Margin="10">

        <TextBlock Text="Название жанра"
                   HorizontalAlignment="Center"
                   Margin="10"/>

        <TextBox x:Name="genreTB" Margin="10"
                 Width="150"/>

        <Button x:Name="addBtn" Content="Добавить"
                Style="{StaticResource AddDelBtn}"
                Width="100"
                Height="25" Click="addBtn_Click"/>


    </StackPanel>
</Window>
