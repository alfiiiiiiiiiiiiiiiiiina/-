<Page
    x:Class="Library.Genres_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Genres_Page"
    d:DesignHeight="500"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="400" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Background="#fc3b3b" RenderTransformOrigin="0.505,0.444">

                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Название Жанра" />
            </Grid>
            <ListBox x:Name="genres_LB" Grid.Row="1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="500" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                x:Name="genreNameTB"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="{Binding Name}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="addBtn"
                    Content="добавить"
                    Style="{StaticResource AddDelBtn}" Click="addBtn_Click" />

                <Button
                    x:Name="delBtn"
                    Content="удалить"
                    Style="{StaticResource AddDelBtn}" Click="delBtn_Click" />
            </StackPanel>


        </Grid>

    </Grid>
</Page>
