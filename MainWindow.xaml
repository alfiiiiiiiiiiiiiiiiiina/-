<Window
    x:Class="Library.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Библиотека"
    Width="1100"
    Height="600"
    Icon="libr.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#660505">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="386*" />
                    <RowDefinition Height="18*" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5">
                    <StackPanel.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="-0.615" />
                            <TranslateTransform />
                        </TransformGroup>
                    </StackPanel.RenderTransform>

                    <Button
                        x:Name="readers_btn"
                        Click="readers_btn_Click"
                        Content="читатели"
                        Style="{StaticResource ButtonStyle}" />

                    <Button
                        x:Name="books_btn"
                        Click="books_btn_Click"
                        Content="книги"
                        Style="{StaticResource ButtonStyle}" />

                    <Button
                        x:Name="borrowing_btn"
                        Click="borrowing_btn_Click"
                        Content="записи"
                        Style="{StaticResource ButtonStyle}" />

                    <Button
                        x:Name="Authours_btn"
                        Click="autours_btn_Click"
                        Content="авторы"
                        Style="{StaticResource ButtonStyle}" />

                    <Button
                        x:Name="genres"
                        Click="genres_btn_Click"
                        Content="жанры"
                        Style="{StaticResource ButtonStyle}" />



                </StackPanel>
            </Grid>
            <Frame
                x:Name="mainframe"
                Grid.Column="1"
                NavigationUIVisibility="Hidden" />

        </Grid>
    </Grid>
</Window>
